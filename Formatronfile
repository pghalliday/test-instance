formatron.name 'test-instance'
formatron.bucket 'formatron-test'

formatron.vpc 'vpc' do |vpc|
  vpc.subnet 'private' do |subnet|
    subnet.instance 'test-instance' do |instance|
      instance.guid 'INSTANCES8FOD9DP'
      instance.sub_domain config['test-instance']['sub_domain']
      instance.chef do |chef|
        chef.cookbook 'cookbooks/test-instance_instance'
      end
    end
  end
end
