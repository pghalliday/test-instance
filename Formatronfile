formatron.name 'formatron-test-instance'
formatron.bucket 'formatron-test'

formatron.dependency 'formatron-test-bootstrap'

formatron.vpc 'vpc' do |vpc|
  vpc.subnet 'private' do |subnet|
    subnet.instance 'formatron-test-instance' do |instance|
      instance.guid 'INSTANCEEHWP4I9C'
      instance.sub_domain config['formatron-test-instance']['sub_domain']
      instance.chef do |chef|
        chef.cookbook 'cookbooks/formatron-test-instance_instance'
      end
    end
  end
end
